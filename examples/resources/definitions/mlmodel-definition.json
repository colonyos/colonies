{
  "apiVersion": "colonies.io/v1",
  "kind": "ResourceDefinition",
  "metadata": {
    "name": "mlmodels.ml.colonies.io",
    "labels": {
      "category": "machine-learning"
    }
  },
  "spec": {
    "group": "ml.colonies.io",
    "version": "v1beta1",
    "names": {
      "kind": "MLModel",
      "listKind": "MLModelList",
      "singular": "mlmodel",
      "plural": "mlmodels",
      "shortNames": ["model", "ml"]
    },
    "scope": "Namespaced",
    "handler": {
      "executorType": "ml-operator",
      "functionName": "deploy_ml_model",
      "reconcileInterval": 60
    },
    "schema": {
      "type": "object",
      "properties": {
        "modelUri": {
          "type": "string",
          "description": "URI to model artifacts (s3://, gs://, file://)"
        },
        "framework": {
          "type": "string",
          "description": "ML framework",
          "enum": ["pytorch", "tensorflow", "onnx", "sklearn"]
        },
        "servingConfig": {
          "type": "object",
          "description": "Model serving configuration",
          "properties": {
            "batchSize": {
              "type": "integer",
              "default": 1
            },
            "gpuMemory": {
              "type": "string",
              "description": "GPU memory required (e.g., '8Gi')"
            },
            "autoscaling": {
              "type": "object",
              "properties": {
                "minReplicas": {
                  "type": "integer",
                  "default": 1
                },
                "maxReplicas": {
                  "type": "integer",
                  "default": 10
                },
                "targetCPU": {
                  "type": "integer",
                  "description": "Target CPU utilization percentage",
                  "default": 70
                }
              }
            }
          }
        }
      },
      "required": ["modelUri", "framework"]
    }
  }
}
