{
  "apiVersion": "colonies.io/v1",
  "kind": "CustomResourceDefinition",
  "metadata": {
    "name": "mlmodels.ml.colonies.io"
  },
  "spec": {
    "group": "ml.colonies.io",
    "version": "v1",
    "names": {
      "kind": "MLModel",
      "plural": "mlmodels"
    },
    "scope": "Namespaced",
    "handler": {
      "executorType": "ml-operator",
      "functionName": "deploy_model"
    },
    "schema": {
      "type": "object",
      "properties": {
        "modelUri": {
          "type": "string",
          "description": "URI to model artifacts"
        },
        "framework": {
          "type": "string",
          "description": "ML framework",
          "enum": ["pytorch", "tensorflow", "onnx", "sklearn"]
        },
        "hardware": {
          "type": "object",
          "description": "Hardware requirements",
          "properties": {
            "gpu": {
              "type": "boolean",
              "default": false
            },
            "gpuType": {
              "type": "string",
              "enum": ["nvidia-t4", "nvidia-a100", "nvidia-h100"]
            },
            "memory": {
              "type": "string",
              "description": "Memory requirement (e.g., '8Gi')"
            }
          },
          "required": ["memory"]
        },
        "replicas": {
          "type": "integer",
          "description": "Number of serving replicas",
          "default": 1
        },
        "endpoints": {
          "type": "array",
          "description": "List of endpoint configurations",
          "items": {
            "type": "object",
            "properties": {
              "path": {
                "type": "string"
              },
              "method": {
                "type": "string",
                "enum": ["GET", "POST"]
              }
            }
          }
        }
      },
      "required": ["modelUri", "framework", "hardware"]
    }
  }
}
